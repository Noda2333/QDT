        <textarea class="weui-textarea1" maxlength="200" name="content" value='{{content}}' placeholder="写点什么吧" style="height:10em" auto-focus="{{true}}" />
    </view>
  <!-- </view> -->




  <!-- <button class="weui-btn page_btn_spacing" type="submit">发布动态</button> -->
  <button class="buttona" form-type="submit">发布动态</button>

  <view style='height:80px'></view>

</form>

</view>


