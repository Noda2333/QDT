<view class="page">

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="weui-cells__title">动态标题</view>
  <!-- <view class="nud"> -->
  <view class="textWindow">
  <input type="text" class="weui-search-bar__input" placeholder="请输入标题" focus="{{true}}" bindinput="topicInput" />
  </view>
  <!-- </view> -->
  <view class="weui-cells__title">动态内容</view>
