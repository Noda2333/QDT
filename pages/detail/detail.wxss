/* 视频 */

.videoInfo-container {
    margin-top: 10rpx;
}

.videoInfo-container video {
    width: 100%;
}

.video-title {
    margin-bottom: 0px;
    margin-left: 15px;
    font-size: 40rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-break: break-word;
    /* 文字最多几行 */
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #000;
}

.video-title2 {
  border-radius: 5px;
  background: whitesmoke;
    margin-bottom: 5px;
    margin-left: 15px;
    font-size: 32rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-break: break-word;
    /* 文字最多几行 */
    -webkit-line-clamp: 10;
    -webkit-box-orient: vertical;
    color: #000;
}

.video-detail {
    margin-top: 2rpx;
    font-size: 28rpx;
    margin-bottom: 50rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.video-detail text {
    margin-left: 15rpx;
}

.video-detail text:first-child {
    margin-left: 0;
}

.video-detail .author {
    color: #000;
}


/* 其他推荐视频 */

.other-video {
    display: flex;
    margin-top: 20rpx;
}

.other-video-image-container {
    margin-right: 5rpx;
    width: 38%;
}

.other-video-image-container image {
    width: 100%;
    border-radius: 15rpx;
}

.other-video-info-container {
    margin-left: 20rpx;
    width: 60%;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
}

.other-video-info-container .other-video-title {
    color: #e06f93;
    font-size: 30rpx;
}

.other-video-info {
    display: flex;
    align-items: center;
    color: #666;
    font-size: 26rpx;
}


/* 评论区域 */

.comments-area {
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    margin: 10rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.comments-count {
    font-size: 28rpx;
    margin-bottom: 50rpx;
}

.comments-list {
    display: flex;
    border-bottom: 1px #ddd solid;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.comment-image {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    margin-right: 20rpx;
}

.comment-image image {
    width: 90%;
    border-radius: 50%;
}

.comment-info-container {
    flex: 8;
    display: flex;
    font-size: 26rpx;
    flex-direction: column;
    justify-content: space-around;
}
.class1{
    padding-left: 30rpx;
    text-align: right;
    padding-right: 30rpx;
    color: rgb(0,200,255);
}
.comment-info {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
}

.comment-content-container {
    font-size: 30rpx;
    display: flex;
    flex-flow: row;
    display: inline-block;
    justify-content: space-between;
}
.video-info {
    position: absolute;
    left: 0;
    bottom: 10rpx;
    justify-content: space-between;
    display: flex;
    width: 100%;
    color: #000;
    font-size: 24rpx;
}
